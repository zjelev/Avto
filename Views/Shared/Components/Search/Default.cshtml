@model SearchModel

<div class="text-center p-3" name="search">
    <form asp-action="@ViewBag.FormAction" method="get">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-if='ViewBag.CallingIndexView != "Reports"' asp-for="Number" placeholder="Пътен лист №" />
        <label asp-display-name-for="From"></label>
        <input asp-for="From" />
        <label asp-display-name-for="To"></label>
        <input asp-for="To" />
        <input asp-if='ViewBag.FormAction != "Motos"' asp-for="MotoName" placeholder="Марка автомобил" />
        <input asp-if='ViewBag.FormAction != "Motos"' asp-for="MotoNumber" placeholder="Рег. № автомобил" />
        <input asp-if='ViewBag.CallingIndexView != "Reports" || ViewBag.FormAction == "Motos"' asp-for="SlujitelId" placeholder="Раб. № шофьор" />
        <input asp-if='ViewBag.CallingIndexView != "Reports" || ViewBag.FormAction == "Motos"' asp-for="SlujitelName" placeholder="Име шофьор" />
        <input asp-if='ViewBag.CallingIndexView == "Transaks"' asp-for="Otdel" placeholder="Отдел" />
        <input type="submit" value="Търси" />
    </form>
</div>
