@model PListModel

@{
    ViewData["Title"] = "Нов";
}

<h1 class="m-3">@ViewData["Title"]</h1>

<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-4">
                <div class="form-group mb-3">
                    <select asp-for="MotoId" class="form-control" asp-items="ViewBag.Motos">
                        <option value="0">Автомобил</option>
                    </select>
                    <span asp-validation-for="MotoId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input asp-for="Number" class="form-control" onfocus="this.value=''" value="Пътен лист №" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group mb-3">
                    <select asp-for="SlujitelId" class="form-control" asp-items="ViewBag.Slujiteli">
                        <option value="0">Шофьор</option>
                    </select>
                    <span asp-validation-for="SlujitelId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input asp-for="Data" class="form-control date-input"/>
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
            </div>

            <div>
            <table class="transaks-table">
                    <tr>
                        <th>Описание км</th>
                        <th>Отдел</th>
                        <th>км</th>
                    </tr>
                    <tr>
                        <td>
                            <select asp-for="TransaksModel[0].KmId" asp-items="Html.GetEnumSelectList<KmId>()" class="form-control">
                                <option>Вид движение</option>
                            </select>
                        </td>
                        <td>
                            <select asp-for="TransaksModel[0].OtdelId" class="form-control" asp-items="ViewBag.Otdeli">
                                <option>Отдел</option>
                            </select>
                        </td>
                        <td><input asp-for="TransaksModel[0].KmKm" /></td>
                    </tr>
                    <!-- Add rows dynamically with JS -->
                </table>
                <button type="button" id="addRow" class="float-end" onclick="newRow()">Добави ред</button>
            </div>

            <div class="form-group m-3">
                <input type="submit" value="Запис" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

<div class="m-3">
    <a asp-action="Index">Списък</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        let rowIndex = 1;
    </script>
}
